@page "{id:int?}"
@model PremierKitchensDB.Pages.Addresses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>

<div id="AddressList" class="col table-responsive">
    <table class="table table-striped table-bordered dataList">
        <thead>
            <tr>
                <th></th>
                <th>
                    Address
                </th>
                <th>
                    Post Code
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address[0].HomePhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address[0].DateFrom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address[0].DateTo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address[0].IsPrimary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address[0].AddressType)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Address)
            {
                <tr>
                    <td>
                        <button type="button" class="btn btn-secondary OpenAddressButton" data-toggle="modal" data-id="@item.AddressID" data-target="#addressModal" data-loading-text="Address at @Html.DisplayFor(modelItem => item.Address1)">
                            <i class="fas fa-external-link-alt"></i>
                        </button>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address1)<br />
                        @Html.DisplayFor(modelItem => item.Address2)<br />
                        @Html.DisplayFor(modelItem => item.Address3)<br />
                        @Html.DisplayFor(modelItem => item.Address4)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostcodeOut) @Html.DisplayFor(modelItem => item.PostcodeIn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HomePhone)
                    </td>
                    <td>
                        @if (item.DateFrom != null)
                        {
                            @item.DateFrom.Value.ToString("dd MMM yy")
                        }
                    </td>
                    <td>
                        @if (item.DateTo != null)
                        {
                            @item.DateTo.Value.ToString("dd MMM yy")
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsPrimary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AddressType.AddressTypeName)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>