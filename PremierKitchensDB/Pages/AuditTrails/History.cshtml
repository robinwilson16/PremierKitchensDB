@page "{tableName?}/{user?}"
@model PremierKitchensDB.Pages.AuditTrails.HistoryModel

<p>
    <a asp-page="Create">Create New</a>
</p>
<div id="CustomerHistoryList" class="col table-responsive">
    <table class="table table-striped table-bordered dataList">
        <thead>
            <tr>
                <th></th>
                <th>
                    Customer Viewed
                </th>
                <th>
                    Last Viewed On
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AuditTrail)
            {
                <tr>
                    <td>
                        <button type="button" class="btn btn-secondary OpenCustomerButton" data-dismiss="modal" data-toggle="modal" data-id="@item.ObjectID" data-target="#customerModal" data-loading-text="Record for @item.ChangeInfo.Replace(" Viewed", "")">
                            <i class="fas fa-external-link-alt"></i>
                        </button>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChangeInfo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdatedDate)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>