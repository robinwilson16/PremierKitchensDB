@page "{tableName?}/{id:int?}"
@model PremierKitchensDB.Pages.AuditTrails.IndexModel

<p>
    <a asp-page="Create">Create New</a>
</p>
<div id="AuditTrailsList" class="col table-responsive">
    <table class="table table-striped table-bordered dataList">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AuditTrail[0].ChangeInfo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AuditTrail[0].UpdatedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AuditTrail[0].ApplicationUserUpdatedBy)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AuditTrail)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChangeInfo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdatedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApplicationUserUpdatedBy.Forename) @Html.DisplayFor(modelItem => item.ApplicationUserUpdatedBy.Surname)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>