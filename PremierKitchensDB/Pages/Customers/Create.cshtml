@page
@model PremierKitchensDB.Pages.Customers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md" id="CustomerForm">
        <form method="post" id="CustomerFormFields">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md d-none d-md-block">
                    <div class="ProfileIcon ProfileIconAnimated">
                        NEW
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Customer ID</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" readonly />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Customer.LegacyCustomerID" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Customer.LegacyCustomerID" class="form-control" />
                            <span asp-validation-for="Customer.LegacyCustomerID" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Customer.Forename" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Customer.Forename" class="form-control" />
                            <span asp-validation-for="Customer.Forename" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Customer.Surname" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Customer.Surname" class="form-control" />
                            <span asp-validation-for="Customer.Surname" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md">
                    <div class="form-group row">
                        <label asp-for="Customer.Email" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Customer.Email" class="form-control" />
                            <span asp-validation-for="Customer.Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group row">
                        <label asp-for="Customer.Title" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <select asp-for="Customer.Title" class="form-control" asp-items="ViewBag.TitleID">
                                <option value="" hidden disabled selected>Please select...</option>
                            </select>
                            <span asp-validation-for="Customer.Title" class="text-danger">fgfdgggf</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md">
                    <div class="form-group row">
                        <label asp-for="Customer.WorkPhone" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Customer.WorkPhone" class="form-control" />
                            <span asp-validation-for="Customer.WorkPhone" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group row">
                        <label asp-for="Customer.MobilePhone" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Customer.MobilePhone" class="form-control" />
                            <span asp-validation-for="Customer.MobilePhone" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md">
                    <hr />
                    <p>Is Existing Customer?</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md">
                    <div class="form-group row">
                        <div class="col-sm">
                            @{
                                if (Model.AssignedAreaDataList != null)
                                {
                                    foreach (var area in Model.AssignedAreaDataList)
                                    {
                                        <div class="custom-control custom-checkbox custom-control-inline">
                                            <input name="selectedAreas" class="custom-control-input" type="checkbox" id="Area-@area.AreaID" value="@area.AreaID" @(Html.Raw(area.Assigned ? "checked" : ""))>
                                            <label class="custom-control-label" for="Area-@area.AreaID">@area.Title</label>
                                        </div>
                                    }
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group row">
                        <label asp-for="Customer.OrderValue" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">&pound;</div>
                                </div>
                                <input asp-for="Customer.OrderValue" class="form-control" />
                            </div>
                            <span asp-validation-for="Customer.OrderValue" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md">
                    <div class="form-group row">
                        <div class="col-sm">
                            <div class="custom-control custom-checkbox custom-control-inline">
                                <input asp-for="Customer.HasOutstandingRemedialWork" class="custom-control-input" />
                                <label asp-for="Customer.HasOutstandingRemedialWork" class="custom-control-label"></label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group row">
                        <div class="col-sm">
                            
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md">
                    <hr />
                </div>
            </div>

            <div class="row">
                <div class="col-md">
                    <div class="form-group row">
                        <label asp-for="Customer.DateOfEnquiry" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Customer.DateOfEnquiry" class="form-control" value="@ViewBag.DateOfEnquiry" />
                            <span asp-validation-for="Customer.DateOfEnquiry" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group row">
                        <div class="col-sm">
                            <div class="custom-control custom-checkbox custom-control-inline">
                                <input asp-for="Customer.CanBeContacted" class="custom-control-input" />
                                <label asp-for="Customer.CanBeContacted" class="custom-control-label"></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md">
                    <div class="form-group row">
                        <label asp-for="Customer.ShowroomID" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <select asp-for="Customer.ShowroomID" class="form-control" asp-items="ViewBag.ShowroomID">
                                <option value="" hidden disabled selected>Please select...</option>
                            </select>
                            <span asp-validation-for="Customer.ShowroomID" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group row">
                        <label asp-for="Customer.SourceOfInformationID" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <select asp-for="Customer.SourceOfInformationID" class="form-control" asp-items="ViewBag.SourceOfInformationID">
                                <option value="" hidden disabled selected>Please select...</option>
                            </select>
                            <span asp-validation-for="Customer.SourceOfInformationID" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-8">
                    <input type="hidden" asp-for="Customer.CreatedDate" value="1900-01-01 10:30" />
                    <input type="hidden" asp-for="Customer.CreatedBy" />
                    <input type="hidden" asp-for="Customer.UpdatedDate" />
                    <input type="hidden" asp-for="Customer.UpdatedBy" />
                    <input type="hidden" value="Create" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
