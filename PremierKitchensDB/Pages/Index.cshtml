@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img src="~/images/banner1.jpg" alt="Image of a kitchen" class="img-fluid" />
            <div class="carousel-caption d-none d-md-block" role="option">
                <p>
                    Press Customers to start
                    <a class="btn btn-light" href="/CustomerDetails">
                        Click here
                    </a>
                </p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/banner2.jpg" alt="Image of a kitchen" class="img-fluid" />
            <div class="carousel-caption d-none d-md-block" role="option">
                <p>
                    Press Customers to start
                    <a class="btn btn-light" href="/CustomerDetails">
                        Click here
                    </a>
                </p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/banner3.jpg" alt="Image of a kitchen" class="img-fluid" />
            <div class="carousel-caption d-none d-md-block" role="option">
                <p>
                    Press Customers to start
                    <a class="btn btn-light" href="/CustomerDetails">
                        Click here
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>