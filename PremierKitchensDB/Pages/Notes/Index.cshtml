@page "{id:int?}"
@model PremierKitchensDB.Pages.Notes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>

<div id="NoteList" class="col table-responsive">
    <table class="table table-striped table-bordered dataList">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Note[0].NoteText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Note[0].IsAlert)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Note[0].CreatedDate)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Note)
            {
            <tr>
                <td>
                    <button type="button" class="btn btn-secondary OpenNoteButton" data-toggle="modal" data-id="@item.NoteID" data-target="#noteModal" data-loading-text="Note created on @Html.DisplayFor(modelItem => item.CreatedDate)">
                        <i class="fas fa-external-link-alt"></i>
                    </button>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoteText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAlert)
                </td>
                <td>
                    @item.CreatedDate.Value.ToString("dd MMM yy")
                </td>
            </tr>
            }
        </tbody>
    </table>
    <div class="Alerts d-none">
        @ViewBag.Alerts
    </div>
</div>

